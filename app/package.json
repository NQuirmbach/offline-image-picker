		"smui-theme": "^8.0.0-beta.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.6",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0",
		"vite-plugin-pwa": "^0.21.1",
		"workbox-window": "^7.3.0"
	},
	"overrides": {
		"sharp": "0.32.6",
		"sharp-ico": "0.1.5"
